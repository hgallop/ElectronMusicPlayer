<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PsuedoActionBar">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="16">@font/skranji_bold</item>
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:shadowColor">@color/textColor</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">@dimen/spacing</item>
        <item name="android:padding">@dimen/tiny_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily" tools:targetApi="16">@font/skranji_regular</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AlbumArt">
        <item name="android:layout_marginTop">@dimen/between</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">25dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="AlbumInfo">
        <item name="android:layout_margin">@dimen/between</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily" tools:targetApi="16">@font/skranji_regular</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="AlbumInfo.Title">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
    </style>

</resources>
